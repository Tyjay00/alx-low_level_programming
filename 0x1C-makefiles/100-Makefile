NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
RM = rm -f

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) *~ \#*\#

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean
	@$(RM) $(NAME)

re: fclean all
